{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock",
    "composer",
    "roots",
    "wordpress",
    "wp",
    "wp-config"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "advanced-custom-fields/advanced-custom-fields-pro",
        "version": "5.8.4",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://connect.advancedcustomfields.com/index.php?a=download&p=pro&k={%ACF_PRO_KEY}&t={%version}"
        },
        "require": {
          "composer/installers": "^1.4",
          "ffraenz/private-composer-installer": "^2.0"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "wpml/wpml-multilingual-cms",
        "version": "4.2.9",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://wpml.org/?download=6088&user_id={%WPML_USERID}&subscription_key={%WPML_PRO_KEY}&version={%version}"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "wpml/wpml-string-translation",
        "version": "2.10.7",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://wpml.org/?download=6092&user_id={%WPML_USERID}&subscription_key={%WPML_PRO_KEY}&version={%version}"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "wpml/acfml",
        "version": "1.4.0",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://wpml.org/?download=1097589&user_id={%WPML_USERID}&subscription_key={%WPML_PRO_KEY}&version={%version}"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "wpml/wp-seo-multilingual",
        "version": "1.0.1",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://wpml.org/?download=3566177&user_id={%WPML_USERID}&subscription_key={%WPML_PRO_KEY}&version={%version}"
        }
      }
    },
    {
      "type": "vcs",
      "url": "https://github.com/wp-graphql/wp-graphiql"
    },
    {
      "type": "package",
      "package": {
        "name": "valu-digital/wp-graphql-polylang",
        "type": "wordpress-plugin",
        "version": "0.2.1",
        "dist": {
          "type": "zip",
          "url": "https://github.com/valu-digital/wp-graphql-polylang/archive/master.zip"
        }
      }
    },
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=7.1",
    "advanced-custom-fields/advanced-custom-fields-pro": "^5.0.0",
    "composer/installers": "^1.7",
    "oscarotero/env": "^1.2.0",
    "roots/wordpress": "5.3.2",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.0.0",
    "rosell-dk/webp-convert": "^2.3",
    "vlucas/phpdotenv": "^3.4.0",
    "wpackagist-plugin/acf-extended": "0.7.9.4",
    "wpackagist-plugin/better-wp-security": "^7.6",
    "wpackagist-plugin/classic-editor": "^1.5",
    "wpackagist-plugin/duplicate-post": "^3.2",
    "wpackagist-plugin/imsanity": "^2.4",
    "wpackagist-plugin/wordpress-seo": "^12.1",
    "wpml/acfml": "^1.4",
    "wpml/wp-seo-multilingual": "^1.0",
    "wpml/wpml-multilingual-cms": "^4.2",
    "wpml/wpml-string-translation": "^2.10"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.4.2",
    "roave/security-advisories": "dev-master",
    "symfony/console": "2.6.7"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "web/app/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "web/app/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    },
    "wordpress-install-dir": "web/wp"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "init-sage": [
      "composer require wpml/wpml-multilingual-cms",
      "composer require wpml/wpml-string-translation",
      "composer require wpml/acfml",
      "composer require wpml/wp-seo-multilingual",
      "rm -rf web/app/mu-plugins/148-ecotools",
      "rm -rf web/app/themes/headless",
      "cd web/app/mu-plugins && php composer-cascade.php install"
    ],
    "init-nuxt": [
      "composer require wpackagist-plugin/polylang",
      "composer require wpackagist-plugin/acf-to-rest-api",
      "composer require valu-digital/wp-graphql-polylang",
      "composer require wp-graphql/wp-graphiql",
      "composer require wp-graphql/wp-graphql",
      "composer require wp-graphql/wp-graphql-acf",
      "composer require ashhitch/wp-graphql-yoast-seo",
      "cd web/app/mu-plugins && php composer-cascade.php install"
    ],
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "test": [
      "phpcs"
    ]
  }
}
